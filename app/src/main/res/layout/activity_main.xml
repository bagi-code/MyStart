<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2dada"
    tools:context="com.bagicode.www.mystart.MainActivity">

    <!--you can change this image with photo-->
    <ImageView
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="270dp" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@drawable/shape_rectangle"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Create by Bagicode"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="7 Day Ago"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--you can change this image with photo-->
            <ImageView
                android:id="@+id/ivProfil"
                android:layout_marginRight="20dp"
                android:background="#000"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_toRightOf="@id/ivProfil"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                android:text="Robby Dianputra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Founder"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tvName"
                android:layout_toRightOf="@id/ivProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_chevron_right_black_24dp"
                android:layout_width="60dp"
                android:layout_height="60dp" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
